{% extends 'front.html.twig' %}

{% block title %}Transport index{% endblock %}

{% block body %}
    <h1>Transport index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Numero</th>
                <th>Nombredesjours</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transport in transports %}
            <tr>
                <td>{{ transport.id }}</td>
                <td>{{ transport.type }}</td>
                <td>{{ transport.numero }}</td>
                <td>{{ transport.nombredesjours }}</td>
                <td>
                    <a href="{{ path('transportfrond_show', {'id': transport.id}) }}">show</a>
                    <a href="{{ path('transportfrond_edit', {'id': transport.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('transportfrond_new') }}">Create new</a>
{% endblock %}
